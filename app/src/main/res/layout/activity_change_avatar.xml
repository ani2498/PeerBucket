<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="54dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="8dp"
                android:id="@+id/close_tcp_dialog_iv"
                android:layout_gravity="center"
                android:src="@drawable/ic_close_lg"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Change Avatar"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:id="@+id/header_tcp_dialog_tv"
                android:textSize="20sp"
                android:layout_weight="1"
                android:layout_marginStart="32dp"
                />
            <Button
                android:layout_width="74dp"
                android:layout_height="34dp"
                android:gravity="center"
                android:layout_margin="8dp"
                android:textColor="@color/material_blue"
                android:background="@drawable/shape_blue_button_small"
                android:text="@string/save_button"
                android:textAllCaps="false"
                android:layout_gravity="center"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>


    <ImageView
        android:layout_marginTop="36dp"
        android:layout_width="164dp"
        android:layout_height="164dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/google_icon"/>

    <TextView
        android:layout_marginTop="26dp"
        android:layout_gravity="center_horizontal"
        android:padding="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_purple_button"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:text="@string/change_avatar_Activity_image"/>

    <TextView
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:layout_marginTop="36dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/material_green"
        android:text="@string/change_avatar_Activity_text"
        android:id="@+id/change_avatar"/>


</LinearLayout>